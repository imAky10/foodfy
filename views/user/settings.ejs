<%- include('../partials/header') %>

<section>
  <br />
  <%- include('../partials/profileSlider') %>
  <br />
</section>
<br />
<section>
  <div class="row">
    <div class="col s4">
      <h5>User Info</h5>
      <br />
      <div class="avatar">
        <% if(avatar.length>0) { %> <% avatar.map((myAvatar)=>{ %>
        <img
          src="/images/avatar/<%= myAvatar.avatarImage %>"
          alt=""
          class="circle responsive-img"
        />
        <a
          class="btn-floating black modal-trigger"
          href="/user/delete/avatar/<%= myAvatar._id %>"
          ><i class="material-icons">delete</i></a
        >

        <% }) } else { %>
        <img src="/images/profile.png" alt="" class="circle responsive-img" />
        <a class="btn-floating black modal-trigger" href="#add-modal"
          ><i class="material-icons">add</i></a
        >
        <% } %>
      </div>
      <br />
      <p><i class="material-icons left">person</i><%= user.name %></p>
      <br />
      <p><i class="material-icons left">email</i><%= user.email %></p>
      <br />
      <p>
        <a
          href="/user/settings"
          class="waves-effect waves-light deep-purple darken-4 btn"
          ><i class="material-icons left">settings</i>Settings</a
        >
      </p>
    </div>
    <div class="col s8">
      <h5 class="center-align">Account Settings</h5>

      <div class="form-style-5">
        <form action="/user/settings" method="POST" autocomplete="off">
          <div class="row">
            <div class="input-field col s5 offset-s1">
              <input
                id="name"
                name="name"
                value="<%= user.name %>"
                type="text"
                class="validate"
              />
              <label for="name">Name</label>
            </div>

            <div class="input-field col s5">
              <input
                id="email"
                name="email"
                value="<%= user.email %>"
                type="email"
                class="validate"
              />
              <label for="email">Email</label>
            </div>
          </div>
          <div class="center-align">
            <button
              class="btn waves-effect blue darken-4 waves-light"
              type="submit"
              name="action"
            >
              Update Details
            </button>
          </div>
        </form>
      </div>
      <br />
      <h6 class="center-align">Change Password</h6>
      <div class="form-style-5">
        <p>Your new password must:</p>
        <p>> Be at least 6 characters in length</p>
        <p>> Not be same as your current password</p>
        <p>> Not contain common passwords.</p>
        <br />
        <div class="center-align">
          <a
            href="/user/settings/change-password"
            class="btn waves-effect teal darken-4 waves-light"
            >Change Password</a
          >
        </div>
      </div>
      <br />
    </div>
  </div>
</section>

<%- include('../partials/footer') %>
